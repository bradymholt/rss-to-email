{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./build/",
    "composite": true,
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": ["test/"]
}
